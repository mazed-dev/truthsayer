{
  "name": "armoury",
  "description": "TS/JS common helpers and utilities",
  "author": "Thread knowledge",
  "version": "0.0.1",
  "license": "no",
  "private": true,
  "type": "module",
  "scripts": {
    "build": "yarn tsc --build --pretty",
    "fix": "yarn fix:prettier && yarn fix:eslint",
    "fix:eslint": "yarn lint:eslint --fix",
    "fix:prettier": "yarn lint:prettier --write",
    "lint": "yarn lint:eslint && yarn lint:prettier && yarn lint:typescript",
    "lint:eslint": "yarn eslint \"./src/**/*.{js,ts}\"",
    "lint:prettier": "yarn prettier --check \"./{src,test}/**/*.{css,md,js,json,ts}\"",
    "lint:typescript": "yarn tsc --build ./ --force",
    "postinstall": "yarn build",
    "test": "NODE_OPTIONS=--experimental-vm-modules yarn jest"
  },
  "dependencies": {
    "base64-js": "^1.5.1",
    "eslint": "^8.16.0",
    "normalize-url": "^7.0.3",
    "prettier": "^2.2",
    "query-string": "^7.0.0",
    "typescript": "4.7.2",
    "xxhashjs": "^0.2.2"
  },
  "devDependencies": {
    "@types/base64-js": "^1.3.0",
    "@types/xxhashjs": "^0.2.2",
    "jest": "^28.1.0",
    "ts-jest": "^28.0.4"
  },
  "files": [
    "/dist"
  ],
  "exports": {
    ".": {
      "import": "./dist/index.js",
      "types": "./dist/index.d.ts"
    }
  }
}
