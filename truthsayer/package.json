{
  "name": "truthsayer",
  "version": "0.1.0",
  "private": true,
  "scripts": {
    "build": "yarn react-scripts build",
    "eject": "yarn react-scripts eject",
    "fix": "yarn fix:prettier && yarn fix:eslint",
    "fix:eslint": "yarn lint:eslint --fix",
    "fix:prettier": "yarn lint:prettier --write",
    "fmt": "yarn prettier --write $(find src -name '*.css' -o -name '*.js' -o -name '*.jsx')",
    "lint": "yarn lint:eslint && yarn lint:prettier && yarn lint:typescript",
    "lint:eslint": "yarn eslint \"./src/**/*.{js,jsx,ts,tsx}\"",
    "lint:prettier": "yarn prettier --check \"./src/**/*.{css,md,js,jsx,json,ts,tsx}\"",
    "lint:typescript": "yarn tsc --build ./ --force",
    "start": "yarn react-scripts start",
    "test": "yarn react-scripts test"
  },
  "dependencies": {
    "@azure/msal-browser": "^2.21.0",
    "@azure/msal-react": "^1.2.0",
    "@babel/core": "^7.15.5",
    "@babel/plugin-proposal-class-properties": "^7.13.0",
    "@babel/preset-typescript": "^7.7.4",
    "@emotion/babel-plugin": "^11.7.2",
    "@emotion/react": "^11.7.1",
    "@emotion/styled": "^11.6.0",
    "@microsoft/microsoft-graph-client": "^3.0.0",
    "@popperjs/core": "^2.10.2",
    "@testing-library/dom": "^7.29",
    "@testing-library/jest-dom": "^5.14.1",
    "@testing-library/react": "^12.1.0",
    "@testing-library/user-event": "^12.6",
    "@types/crc": "^3.4.0",
    "@types/is-url": "^1.2.30",
    "@types/jest": "^26.0.0",
    "@types/microsoft-graph": "^2.13.0",
    "@types/mocha": "^5.2.7",
    "@types/node": "^14.14",
    "@types/react": "^17.0",
    "@types/react-router-dom": "^5.1.8",
    "@typescript-eslint/eslint-plugin": "^4.5.0",
    "@typescript-eslint/parser": "^4.5.0",
    "armoury": "0.0.1",
    "babel-eslint": "^10.0.3",
    "bootstrap": "^5.1.3",
    "core-js": "^3.14.0",
    "crc": "^3.4.0",
    "crypto-js": "^4.0.0",
    "elementary": "0.0.1",
    "eslint": "^7.11.0",
    "eslint-plugin-import": "^2.18.2",
    "eslint-plugin-react": "^7.16.0",
    "fbjs": "^3.0.0",
    "http-status-codes": "2.1.4",
    "image-extensions": "^1.1.0",
    "is-url": "^1.2.4",
    "js-base64": "^3.6",
    "keycode": "^2.2",
    "local-storage": "^2.0",
    "lodash": "^4.17.21",
    "markdown-draft-js": "^2.2.1",
    "moment": "^2.29.1",
    "node-emoji": "^1",
    "prettier": "^2.2",
    "prop-types": "^15.7.2",
    "query-string": "^7.0.0",
    "react": "^17.0.2",
    "react-bootstrap": "^2.0.0",
    "react-css-modules": "^4",
    "react-dom": "^17.0.2",
    "react-router": "^5.1",
    "react-router-dom": "^5.1",
    "react-scripts": "^4.0.3",
    "regenerator-runtime": "^0.13.7",
    "remark-parse": "^9.0.0",
    "remark-slate": "^1.8.0",
    "slate": "^0.65.3",
    "slate-history": "^0.65.3",
    "slate-react": "^0.65.3",
    "smuggler-api": "0.0.1",
    "ts-node": "^9.1.1",
    "typescript": "4.1.3",
    "unified": "^6.1.5",
    "universal-cookie": "^4.0",
    "use-async-effect": "^2.2.3",
    "uuid": "^3.3"
  },
  "eslintConfig": {
    "extends": [
      "react-app",
      "react-app/jest"
    ]
  },
  "browserslist": {
    "production": [
      ">0.2%",
      "not dead",
      "not op_mini all"
    ],
    "development": [
      "last 1 chrome version",
      "last 1 firefox version",
      "last 1 safari version"
    ]
  },
  "lint-staged": {
    "*.{css,md,js,jsx,json,ts,tsx}": [
      "prettier --write",
      "eslint --fix"
    ]
  },
  "proxy": "http://0.0.0.0:8080",
  "simple-git-hooks": {
    "pre-commit": "yarn lint-staged"
  }
}
