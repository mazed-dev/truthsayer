{
  "compilerOptions": {
    "allowJs": false,
    "allowSyntheticDefaultImports": true,
    "composite": true,
    "declaration": true,
    "declarationMap": true,
    "esModuleInterop": true,
    "inlineSources": false,
    "sourceMap":true,
    "forceConsistentCasingInFileNames": true,
    "isolatedModules": true,
    "lib": [ "es6", "esnext" ],
    "module": "esnext",
    "moduleResolution": "node",
    "noFallthroughCasesInSwitch": true,
    "noImplicitAny": true,
    "noImplicitReturns": true,
    "outDir": "dist",
    "removeComments": true,
    "resolveJsonModule": true,
    "rootDir": "src",
    "skipLibCheck": true,
    "strict": true,
    "target": "es6"
  },
  "references": [
    {
      "path": "../armoury"
    }
  ],
  "include": [ "src" ],
  "exclude": [ "node_modules" ]
}
