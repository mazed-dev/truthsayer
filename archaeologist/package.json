{
  "name": "archaeologist",
  "version": "0.1.0",
  "private": true,
  "scripts": {
    "build:chrome:public": "yarn __build --env chrome --mode production",
    "build:chrome:local": "yarn __build --env chrome --mode development",
    "build:firefox:local": "yarn __build --env firefox --mode development",
    "build:firefox:public": "yarn __build --env firefox --mode production",
    "__build": "yarn webpack --config webpack.config.js --progress --color",
    "run:chrome:local": "yarn build:chrome:local && yarn __run --target chromium",
    "run:chrome:public": "yarn build:chrome:public && yarn __run --target chromium",
    "run:firefox:local": "yarn build:firefox:local && yarn __run --target firefox-desktop",
    "run:firefox:public": "yarn build:firefox:public && yarn __run --target firefox-desktop",
    "__run": "yarn web-ext run --source-dir target/unpacked --artifacts-dir target/packed --start-url localhost:3000",
    "lint:for-store:firefox:local": "yarn build:firefox:local && yarn web-ext lint --source-dir target/unpacked --artifacts-dir target/packed",
    "lint:for-store:firefox:public": "yarn build:firefox:public && yarn web-ext lint --source-dir target/unpacked --artifacts-dir target/packed",
    "test": "yarn jest",
    "fix": "yarn fix:prettier && yarn fix:eslint",
    "fix:eslint": "yarn lint:eslint --fix --max-warnings 0",
    "fix:prettier": "yarn lint:prettier --write",
    "fmt": "yarn prettier --write $(find src -name '*.css' -o -name '*.js' -o -name '*.jsx')",
    "lint": "yarn lint:eslint && yarn lint:prettier && yarn lint:typescript",
    "lint:eslint": "yarn eslint \"./src/**/*.{js,jsx,ts,tsx}\" --max-warnings 0",
    "lint:prettier": "yarn prettier --check \"./src/**/*.{css,md,js,jsx,json,ts,tsx}\"",
    "lint:typescript": "yarn tsc --build ./ --force"
  },
  "browserslist": {
    "production": [
      ">0.2%",
      "not dead",
      "not op_mini all"
    ],
    "development": [
      "last 1 chrome version",
      "last 1 firefox version",
      "last 1 safari version"
    ]
  },
  "dependencies": {
    "@babel/core": "^7.15.5",
    "@babel/plugin-proposal-class-properties": "^7.13.0",
    "@babel/preset-env": "^7.15.6",
    "@babel/preset-react": "^7.14.5",
    "@babel/preset-typescript": "^7.7.4",
    "@emotion/react": "^11.7.1",
    "@emotion/styled": "^11.6.0",
    "@mozilla/readability": "^0.4.1",
    "@popperjs/core": "^2.10.2",
    "armoury": "0.0.1",
    "bootstrap": "^5.1.3",
    "css-loader": "^4.3.0",
    "elementary": "0.0.1",
    "jsdom": "^17.0.0",
    "prettier": "^2.2",
    "process": "^0.11.10",
    "react": "^17.0.2",
    "react-bootstrap": "^2.0.0",
    "react-dom": "^17.0.2",
    "smuggler-api": "0.0.1",
    "ts-loader": "^8.3.0",
    "ts-node": "^9.1.1",
    "typescript": "4.1.3",
    "universal-cookie": "^4.0",
    "url-loader": "^4.1.1",
    "web-ext": "^6.8.0",
    "web-vitals": "^1.0.1",
    "webextension-polyfill": "^0.8.0",
    "webpack": "5.72.1",
    "webpack-cli": "^4.9.0",
    "webpack-dev-server": "4.9.0"
  },
  "eslintConfig": {
    "extends": [
      "react-app",
      "react-app/jest"
    ]
  },
  "devDependencies": {
    "@testing-library/dom": "^7.29",
    "@testing-library/jest-dom": "^5.14.1",
    "@testing-library/react": "^12.1.0",
    "@testing-library/user-event": "^12.6",
    "@types/chrome": "^0.0.154",
    "@types/copy-webpack-plugin": "^8.0.1",
    "@types/download": "^8.0.1",
    "@types/jsdom": "^16.2.13",
    "@types/mozilla-readability": "^0.2.1",
    "@types/react-dom": "^17.0.11",
    "@types/webextension-polyfill": "^0.8.2",
    "body-parser": "^1.19.1",
    "copy-webpack-plugin": "^6.2.1",
    "download": "^8.0.0",
    "eslint": "^8.16.0",
    "express": "^4.17.2",
    "jest": "26.6.0",
    "jest-fetch-mock": "^3.0.3",
    "safe-compare": "^1.1.4",
    "terser-webpack-plugin": "^4.2.3",
    "ts-jest": "^26.4.2"
  },
  "jest": {
    "automock": false,
    "setupFiles": [
      "./src/setupTests.js"
    ]
  }
}
