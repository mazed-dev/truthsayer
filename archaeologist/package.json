{
  "name": "archaeologist",
  "version": "0.1.0",
  "private": true,
  "scripts": {
    "build:chrome:public": "yarn __build --env chrome --mode production",
    "build:chrome:local": "yarn __build --env chrome --mode development",
    "__build": "yarn webpack --config webpack.config.js --progress --color",
    "test": "yarn jest",
    "eject": "yarn react-scripts eject",
    "fix": "yarn fix:prettier && yarn fix:eslint",
    "fix:eslint": "yarn lint:eslint --fix --max-warnings 0",
    "fix:prettier": "yarn lint:prettier --write",
    "fmt": "yarn prettier --write $(find src -name '*.css' -o -name '*.js' -o -name '*.jsx')",
    "lint": "yarn lint:eslint && yarn lint:prettier && lint:typescript",
    "lint:eslint": "yarn eslint \"./src/**/*.{js,jsx,ts,tsx}\" --max-warnings 0",
    "lint:prettier": "yarn prettier --check \"./src/**/*.{css,md,js,jsx,json,ts,tsx}\"",
    "lint:typescript": "yarn tsc --build ./ --force"
  },
  "browserslist": {
    "production": [
      ">0.2%",
      "not dead",
      "not op_mini all"
    ],
    "development": [
      "last 1 chrome version",
      "last 1 firefox version",
      "last 1 safari version"
    ]
  },
  "dependencies": {
    "@babel/core": "^7.15.5",
    "@babel/plugin-proposal-class-properties": "^7.13.0",
    "@babel/preset-env": "^7.15.6",
    "@babel/preset-react": "^7.14.5",
    "@babel/preset-typescript": "^7.7.4",
    "@emotion/react": "^11.6.0",
    "@emotion/styled": "^11.6.0",
    "@hot-loader/react-dom": "^16.8.6",
    "@mozilla/readability": "^0.4.1",
    "@popperjs/core": "^2.10.2",
    "@testing-library/dom": "^7.29",
    "@testing-library/jest-dom": "^5.14.1",
    "@testing-library/react": "^12.1.0",
    "@testing-library/user-event": "^12.6",
    "bootstrap": "^5.1.3",
    "copy-webpack-plugin": "^6.2.1",
    "css-loader": "^4.3.0",
    "elementary": "0.0.1",
    "eslint": "^7.11.0",
    "jest": "26.6.0",
    "jsdom": "^17.0.0",
    "normalize-url": "^7.0.2",
    "prettier": "^2.2",
    "process": "^0.11.10",
    "react": "^17.0.2",
    "react-bootstrap": "^2.0.0",
    "react-dom": "^17.0.2",
    "react-scripts": "^4.0.3",
    "smuggler-api": "0.0.1",
    "style-loader": "1.3.0",
    "ts-jest": "^26.4.2",
    "ts-loader": "^8.3.0",
    "ts-node": "^9.1.1",
    "typescript": "4.1.3",
    "universal-cookie": "^4.0",
    "web-vitals": "^1.0.1",
    "webpack": "4.44.2",
    "webpack-cli": "^4.9.0",
    "webpack-dev-server": "3.11.1"
  },
  "eslintConfig": {
    "extends": [
      "react-app",
      "react-app/jest"
    ]
  },
  "devDependencies": {
    "@types/chrome": "^0.0.154",
    "@types/copy-webpack-plugin": "^8.0.1",
    "@types/jsdom": "^16.2.13",
    "@types/mozilla-readability": "^0.2.1",
    "jest-fetch-mock": "^3.0.3"
  },
  "jest": {
    "automock": false,
    "setupFiles": [
      "./src/setupTests.js"
    ]
  }
}
